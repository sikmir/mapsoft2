#!/bin/bash -efu

# General interface and option tests
# See also getopt module tests

P=${1:-./ms2vmap}

. ../test_lib.sh

help_msg="$($P -h ||:)"
assert "$P" "$help_msg" 1
assert "$P --help" "$help_msg" 1
assert "$P --xxx " "Error: unknown option: --xxx" 1

assert "$P a" "$help_msg" 1
assert "$P a b" "Error: ms2vmap: unknown action: b" 1
