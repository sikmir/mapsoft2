#!/bin/bash -efu

# VMAP1 import/export

P=${1:-./ms2mapdb}

. ../test_lib.sh

rm -rf tmp.db

assert "$P render tmp.db 1" "Error: render: one argument expected: MapDB folder" 1
assert "$P render tmp.db" "Error: Can't find MapDB folder: tmp.db" 1

assert "$P import_vmap tmp.db test_data/n37-016.vmap" "" 0

assert "$P render tmp.db --out file.png"\
       "Error: GObjMapDB: can't open configuration file: tmp.db/render.cfg" 1

assert "$P render tmp.db --out file.png --config ../../data/render.cfg"\
       "Error: Map reference is not set" 1

assert "$P render tmp.db --out file.png --config ../../data/render.cfg --mkref nom --name n37-016" "" 0


